<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardMyPlant"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    android:layout_gravity="center"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_radius_8dp"
    android:backgroundTint="@color/green_accent"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_tanaman"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/gambar_tanaman"
            android:cropToPadding="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/padi_dummy" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_radius_8dp"
            android:backgroundTint="@color/dark_accent_transparent_60"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_tanaman"
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:layout_marginStart="18dp"
            android:contentDescription="@string/icon_tanaman"
            android:gravity="center"
            android:src="@drawable/ic_tanam"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nama_tanaman"
            style="@style/Medium16Sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/padi"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/ic_tanaman"
            app:layout_constraintStart_toEndOf="@id/ic_tanaman"
            app:layout_constraintTop_toTopOf="@id/ic_tanaman" />

        <ImageView
            android:id="@+id/ic_status"
            android:layout_width="14dp"
            android:layout_height="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="17dp"
            android:contentDescription="@string/icon_status"
            android:src="@drawable/ic_checklist"
            app:layout_constraintStart_toEndOf="@id/tv_nama_tanaman"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_status"
            style="@style/Regular12Sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="18dp"
            android:text="@string/status_tanaman"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/ic_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ic_status"
            app:layout_constraintTop_toTopOf="@id/ic_status" />

        <ImageView
            android:id="@+id/ic_waktu"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="17dp"
            android:contentDescription="@string/icon_waktu"
            android:src="@drawable/ic_time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_nama_tanaman" />

        <TextView
            android:id="@+id/tv_waktu"
            style="@style/Regular12Sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="18dp"
            android:text="@string/dummy_waktu"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/ic_waktu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ic_waktu"
            app:layout_constraintTop_toTopOf="@id/ic_waktu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

